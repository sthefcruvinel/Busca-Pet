<div class="container col-md-8 offset-md-4 pb-5" style="margin-top: 13%;">
    <div class="row">        
        <div class="col-md-6" style="background-color:#fff; border-radius: 10px; margin-left: 1%; box-shadow: 0px 0px 8px 1px rgba(0, 0, 0, 0.2);">
            <h4 class="pt-3 col-md-5 offset-md-4">Novo por aqui?</h4>
            <h4 class="col-md-5 offset-md-4">Crie sua conta!</h4>
            <form action="" method="POST">
                <div class="container col-md-8 pt-5">
                    <input class="form-control" name="usuarioNome" type="text" placeholder="Nome completo">
                </div>
                <div class="container col-md-8 pt-2">
                    <input class="form-control" name="usuarioContato" type="text" placeholder="Telefone para contato">
                </div>
                <div class="container col-md-8 pt-2">
                    <input class="form-control" name="usuarioEmail" type="text" placeholder="E-mail">
                </div>
                <div class="container col-md-8 pt-2">
                    <input class="form-control" name="usuarioSenha" type="password" placeholder="Senha">
                </div>
                <div class="container col-md-8 pt-2">
                    <input class="form-control" name="usuarioSenhaValida" type="password" placeholder="Confirme sua senha">
                </div>
                <div class="container col-md-8 pt-3 pb-5">
                    <button type="submit" class="form-control" style="background-color:#77D353; color:#fff; border: none;">Entrar</button>
                </div>
            </form>
            {{#each erros}}
                <div class="alert alert-warning" role="alert">
                    {{texto}}
                </div>
            {{else}}
            {{/each}}
        </div>
    </div>
</div>